@using MinhTuan.Domain.Entities;
@using MinhTuan.Application.Areas.Category.Models;
@model CreateViewModel
<!-- Basic Modal -->
<style>
    .text-uppercase {
        text-transform: uppercase;
    }
</style>
<div class="modal" id="createCategoryModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
       
            <div class="modal-content" style="border-radius:5px">
                <div class="modal-header btn btn-primary" style="display: flex; align-items: center; justify-content: center; position: relative;color:white;border-radius:0px">
                    <h3 class="modal-title" style="flex: 1; text-align: center; margin: 0;">Thêm mới danh mục</h3>

                </div>
            <form asp-action="Create" asp-controller="Category" asp-area="Category" method="post">
                <div class="modal-body">
               
                    <div class="mb-3">
                        <label for="Code" class="form-label">Mã danh mục  <span class="text-danger">*</span></label>

                        @Html.TextBoxFor(m => m.Code, new { @class = "form-control text-uppercase", maxlength = "25", placeholder = "..." })
                    </div>
                    <div class="mb-3">
                        <label for="Code" class="form-label">Tên danh mục  <span class="text-danger">*</span></label>

                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", maxlength = "50", placeholder = "..." })
                    </div>
                    <div class="mb-3">
                        <label for="exampleFormControlTextarea1" class="form-label">Mô tả / Ghi chú</label>
                        @Html.TextAreaFor(m => m.Description, new { @class = "form-control", placeholder = "..." })
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Hoàn thành</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                </div>
            </form>
            </div>
     
        
        
    </div>
</div><!-- End Basic Modal-->

