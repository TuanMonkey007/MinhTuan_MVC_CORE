							</li>

							<li class="label1" data-label1="hot">
								<a href="shoping-cart.html">Khuyến mãi</a>
							</li>

							<li>
								@Html.ActionLink("Chính sách", "Privacy", "Home")

							</li>

							<li>
								<a href="about.html">Về chúng tôi</a>
							</li>

							<li>
								<a href="contact.html">Liên hệ</a>
							</li>
						</ul>
					</div>

					<!-- Icon header -->
