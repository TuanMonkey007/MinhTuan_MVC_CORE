	<div id="custom-alert" class="alert @TempData["AlertType"] alert-dismissible fade" role="alert" style="position:fixed;top:100px;right:20px;font-size:1.1em">
		<i class="@TempData["ClassIcon"]"></i>
		@TempData["AlertMessage"]

	</div>
